


<%- include("partials/head.ejs") %>
<%- include("partials/nav.ejs") %>

<main id="alta-container">
    
    <div id="products-container" class="form-container">
        <h3>Alta productos</h3>

        <!-- Formulario para crear productos y enviarlos a /api/products -->
        <form id="altaProducts-container" class="form-alta">
    
           <label for="nameProd">Nombre</label>
        <input type="text" name="nombre" id="nameProd" required>
        <br>

        <label for="imageProd">Imagen</label>
        <input type="text" name="img_url" id="imageProd" required>
        <br>

        <label for="categoryProd">Categoria</label>
        <select name="tipo" id="categoryProd" required>
            <option value="marca">De Marca</option>
            <option value="sin_marca">Sin Marca</option>
        </select>
        <br>

        <label for="priceProd">Precio</label>
        <input type="number" name="precio" id="priceProd" required>
        <br>

        <input type="submit" value="Crear producto">
        </form>
    </div>

    <div id="users-container" class="form-container">
        <h3>Alta usuarios</h3>

        <!-- Formulario para crear usuarios y enviarlos a /api/users -->
        <form id="altaUsers-container" class="form-alta">
            <label for="nombreUser">Nombre</label>
            <input type="text" name="nombre" id="nombreUser" required>
    
            <label for="emailUser">Email</label>
            <input type="email" name="correo" id="emailUser" required>
    
            <label for="passwordUser">Password</label>
            <input type="password" name="password" id="passwordUser" required>
    
            <input type="submit" value="Crear usuario">
        </form>
    </div>

</main>

<script src="js/crear.js"></script>

<%- include("partials/footer.ejs") %>